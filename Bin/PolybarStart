#!/usr/bin/env sh

#terminate already running bar instances
killall -q polybar

#wait until the processes have shut down
while pgrep -u $UID -x polybar >/dev/null; do
sleep 1; done

#launch bar1 and bar2 and bar3
# polybar -r left & polybar -r right &
/home/christian/Opt/polybar/build/bin/polybar -r left & /home/christian/Opt/polybar/build/bin/polybar -r right &
# polybar -r rightTV &

